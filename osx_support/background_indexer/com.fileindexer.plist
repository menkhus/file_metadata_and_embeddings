<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.fileindexer</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/FileIndexer</string>
        <string>--database</string>
        <string>~/Library/Application Support/FileSearch/file_metadata.db</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>Nice</key>
    <integer>19</integer>
    
    <key>LowPriorityIO</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/tmp/fileindexer.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/fileindexer.error.log</string>
    
    <key>ThrottleInterval</key>
    <integer>60</integer>
</dict>
</plist>
